<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content" >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true"
            app:cardElevation="1dp"
            app:cardCornerRadius="4dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Contenido-->
                <LinearLayout
                    android:id="@+id/llContent"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--Titulo-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/aquamarineBackground">
                        <TextView
                            android:id="@+id/tvTitle"
                            android:textSize="14dp"
                            android:textColor="@color/white"
                            android:layout_centerVertical="true"
                            android:textAlignment="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                    <!--Completar-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:padding="15dp">
                        <TextView
                            android:id="@+id/tvAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DirecciÃ³n del servicio"
                            android:textAlignment="center"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/input_edittext"
                            android:layout_marginTop="5dp">
                            <TextView
                                android:id="@+id/etAddress"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:text="Avda. Herrera 1642 c/ Rca. Francesa"
                                android:layout_centerVertical="true"
                                android:textColor="#666"
                                android:textSize="12dp" />
                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/ic_edit"
                                android:tint="#999999"
                                android:layout_marginEnd="5dp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <!--Completar-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre del Cliente"
                            android:textAlignment="center"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/input_edittext"
                            android:layout_marginTop="5dp">
                            <EditText
                                android:id="@+id/etClientName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_centerVertical="true"
                                android:background="@null"
                                android:textColor="#666"
                                android:textSize="12dp"
                                android:inputType="text"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:imeOptions="actionDone"/>
                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/ic_edit"
                                android:tint="#999999"
                                android:layout_marginEnd="5dp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <!--Completar-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp">
                        <TextView
                            android:id="@+id/tvClientType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipo de Cliente"
                            android:textAlignment="center"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3"
                            android:layout_marginTop="5dp">

                            <!--Perfil1-->
                            <LinearLayout
                                android:id="@+id/llProfileWoman"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground">
                                <ImageView
                                    android:id="@+id/ivProfileWoman"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/icon_profile_woman_inactive" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Mujer"/>
                            </LinearLayout>

                            <!--Perfil1-->
                            <LinearLayout
                                android:id="@+id/llProfileMan"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground">
                                <ImageView
                                    android:id="@+id/ivProfileMan"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/icon_profile_man_inactive" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Hombre"/>
                            </LinearLayout>

                            <!--Perfil1-->
                            <LinearLayout
                                android:id="@+id/llProfileKid"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground">
                                <ImageView
                                    android:id="@+id/ivProfileKid"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/icon_profile_kid_inactive" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="NiÃ±o/a"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!--Continue button-->
                <RelativeLayout
                    android:layout_below="@+id/llContent"
                    android:layout_width="220dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="40dp">
                    <Button
                        android:id="@+id/btnAcept"
                        style="@style/button_aqua"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="CONTINUAR"/>
                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/ivClose"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_close_popup"
            android:elevation="5dp"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</RelativeLayout>