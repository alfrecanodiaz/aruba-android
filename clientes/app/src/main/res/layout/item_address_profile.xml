<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ivSelected"
        android:layout_centerVertical="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:tint="@color/aquamarineBackground"
        android:src="@drawable/ic_checkmark_round"/>

    <Button
        android:id="@+id/btnAddress"
        android:layout_width="match_parent"
        android:layout_toStartOf="@+id/rlContentIcons"
        android:layout_height="32dp"
        android:paddingLeft="5dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/ivSelected"
        android:textColor="@color/white"
        android:shadowColor="#20000000"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:textAllCaps="false"
        android:background="@drawable/button_silver"
        android:foreground="?android:attr/selectableItemBackground"
        android:textSize="11dp"
        android:ellipsize="end"
        android:singleLine="true"
        style="?android:attr/borderlessButtonStyle"
        android:layout_toLeftOf="@+id/rlContentIcons"
        android:layout_toRightOf="@+id/ivSelected" />

    <RelativeLayout
        android:id="@+id/rlContentIcons"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">
        <ImageView
            android:id="@+id/ivEdit"
            android:layout_marginLeft="5dp"
            android:padding="3dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:focusable="true"
            android:tint="@color/brown2"
            android:src="@drawable/ic_edit"/>
        <ImageView
            android:id="@+id/ivDelete"
            android:layout_toEndOf="@+id/ivEdit"
            android:padding="3dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_delete_forever"
            android:tint="@color/brown2"
            android:clickable="true"
            android:focusable="true"
            android:layout_toRightOf="@+id/ivEdit" />
    </RelativeLayout>
</RelativeLayout>