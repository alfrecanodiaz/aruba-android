<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/rlItem"
	android:layout_width="match_parent"
	android:layout_height="45dp"
	android:layout_marginBottom="15dp"
	android:background="#60EEEEEE"
	android:clickable="true"
	android:focusable="true"
	android:foreground="?android:attr/selectableItemBackground">

	<View
		android:id="@+id/ivViewBorder"
		android:layout_width="2dp"
		android:layout_height="match_parent"
		android:background="@color/aquamarineBackground"/>

	<!--Detail-->
	<RelativeLayout
		android:layout_centerVertical="true"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/tvClient"
			android:layout_marginEnd="50dp"
			android:layout_marginStart="10dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/black200"
			android:textSize="14dp"
			android:text="Nathalia RÃ­os"/>

		<TextView
			android:id="@+id/tvTime"
			android:layout_below="@+id/tvClient"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="50dp"
			android:layout_marginStart="10dp"
			android:textColor="@color/black100"
			android:text="8:00 a.m."
			android:textSize="12dp" />

		<ImageView
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:layout_marginEnd="5dp"
			android:layout_centerVertical="true"
			android:layout_alignParentEnd="true"
			app:srcCompat="@drawable/icon_add_aqua" />
	</RelativeLayout>

	<!--Separador-->
<!--	<View-->
<!--		android:layout_alignParentBottom="true"-->
<!--		android:layout_width="match_parent"-->
<!--		android:layout_height="1dp"-->
<!--		android:background="@color/lineBlack" />-->
</RelativeLayout>
