<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.LoginActivity">
    <RelativeLayout
        android:id="@+id/app_bar_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:fitsSystemWindows="false"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <!--icon-->
                    <RelativeLayout
                        android:id="@+id/rlBackButton"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="15dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="15dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/back_button" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/logo_superior" />
                </RelativeLayout>
            </FrameLayout>
        </com.google.android.material.appbar.AppBarLayout>
    </RelativeLayout>

    <!--Contenido Botones-->
    <ScrollView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <!--Fondo-->
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/login_bg"
                android:layout_below="@+id/app_bar_content" />

            <!--Titulo-->
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="INGRESAR CON MI EMAIL"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="2dp"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@color/lineBlack" />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--Campos-->
                <RelativeLayout
                    android:background="@drawable/input_edittext"
                    android:layout_marginBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp">
                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:padding="5dp"
                        android:hint="EMAIL"
                        android:inputType="textEmailAddress"
                        android:background="@android:color/transparent"
                        android:textColor="#666"
                        android:textSize="12sp"
                        android:maxLines="1"
                        android:imeOptions="actionNext"/>
                </RelativeLayout>

                <!--Campos-->
                <RelativeLayout
                    android:background="@drawable/input_edittext"
                    android:layout_marginBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp">


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        android:background="@null"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/colorPrimary">

                        <EditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:padding="5dp"
                            android:hint="CONTRASEÑA"
                            android:background="@null"
                            android:inputType="textPassword"
                            android:textColor="#666"
                            android:textSize="12sp"
                            android:maxLines="1"
                            android:imeOptions="actionDone"/>

                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>

                <!--Boton-->
                <Button
                    android:id="@+id/btnLogin"
                    android:text="INICIAR SESIÓN"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    style="@style/button_aqua"/>

                <RelativeLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:layout_width="150dp"
                    android:layout_height="20dp">
                    <View
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#60333333" />
                    <TextView
                        android:text="O"
                        android:background="@color/white"
                        android:layout_centerInParent="true"
                        android:textAlignment="center"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <Button
                    style="@style/button_fb"
                    android:id="@+id/btnFacebook"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:text="INICIAR SESIÓN CON FACEBOOK" />

                <!--Accept terms and conditions-->
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:text="¿Olvidaste tu contraseña?"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>