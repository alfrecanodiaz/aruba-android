<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<RelativeLayout
		android:layout_centerInParent="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" >

		<!--Circulo-->
		<RelativeLayout
			android:id="@+id/rlContentCounter"
			android:layout_width="180dp"
			android:layout_height="180dp"
			android:layout_centerHorizontal="true">

			<ImageView
				android:id="@+id/ivBgCircle"
				android:layout_width="180dp"
				android:layout_height="180dp"
				android:layout_centerInParent="true"
				app:srcCompat="@drawable/loading_border"/>

			<ImageView
				android:id="@+id/ivBackground"
				android:layout_width="160dp"
				android:layout_height="160dp"
				android:layout_centerInParent="true"
				app:srcCompat="@drawable/icon_services"/>

			<TextView
				android:id="@+id/tvCounterDown"
				android:paddingLeft="15dp"
				android:paddingRight="15dp"
				android:paddingTop="3dp"
				android:paddingBottom="3dp"
				android:textColor="@color/white"
				android:textStyle="bold"
				android:layout_centerHorizontal="true"
				android:layout_alignParentBottom="true"
				android:layout_marginBottom="25dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="01:15:00"/>

			<ImageView
				android:id="@+id/ivClose"
				android:layout_width="22dp"
				android:layout_height="22dp"
				android:src="@drawable/icon_close_popup"
				android:elevation="5dp"
				android:layout_margin="5dp"
				android:layout_alignParentTop="true"
				android:layout_alignParentEnd="true" />
		</RelativeLayout>

		<!--Botones-->
		<RelativeLayout
			android:layout_below="@+id/rlContentCounter"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="10dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<Button
				android:id="@+id/btnFinished"
				android:layout_width="100dp"
				android:layout_height="35dp"
				android:layout_marginBottom="5dp"
				android:text="Terminar"
				android:layout_gravity="center_horizontal"
				style="@style/button_brown"/>
		</RelativeLayout>
	</RelativeLayout>
</RelativeLayout>