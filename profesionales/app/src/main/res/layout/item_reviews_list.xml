<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/llItem"
	android:layout_width="match_parent"
	android:layout_height="55dp"
	android:orientation="vertical"
	android:clickable="true"
	android:focusable="true"
	android:foreground="?android:attr/selectableItemBackground">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_gravity="center_vertical"
		android:orientation="horizontal"
		android:weightSum="2">

		<!--Nombre-->
		<RelativeLayout
			android:layout_width="0dp"
			android:paddingLeft="10dp"
			android:layout_gravity="center_vertical"
			android:layout_height="wrap_content"
			android:layout_weight="1">

			<TextView
				android:id="@+id/tvClient"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Nathalia RÃ­os"
				android:textSize="14dp" />

			<TextView
				android:id="@+id/tvDate"
				android:layout_below="@+id/tvClient"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:textColor="@color/black100"
				android:text="10/08/19"
				android:textSize="10dp" />
		</RelativeLayout>

		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:layout_marginTop="5dp"
			android:layout_marginBottom="5dp"
			android:background="@color/lineBlack" />

		<!--Calificacion-->
		<RelativeLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center_horizontal"
				android:orientation="horizontal">

				<ImageView
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="5dp"
					app:srcCompat="@drawable/icon_comment" />

				<ImageView
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="10dp"
					app:srcCompat="@drawable/icon_like" />

				<androidx.appcompat.widget.AppCompatRatingBar
					android:id="@+id/ratingBar"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:progressTint="@color/yellow"
					android:secondaryProgressTint="@color/yellow"
					android:progressBackgroundTint="@color/brown2"
					style="?android:attr/ratingBarStyleSmall"
					android:layout_gravity="center_vertical"
					android:isIndicator="true"
					android:numStars="5"
					android:stepSize="1.0"
					android:rating="4" />
			</LinearLayout>
		</RelativeLayout>
	</LinearLayout>

	<View
		android:layout_gravity="bottom"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/lineBlack"/>
</LinearLayout>